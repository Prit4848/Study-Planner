<%- include('./partials/header') %>

<div class="container mx-auto p-4">
  <div class="bg-white shadow-md rounded-lg p-6 mt-10">
    <h1 class="text-3xl font-bold mb-4">Dashboard</h1>
    <p class="text-lg mb-6">Welcome, <%= user.username %>!</p>
    <h2 class="text-2xl font-semibold mb-4">Your Study Plans</h2>
    <ul class="list-disc pl-6 space-y-2">
      <% plan.reverse().forEach(plans => { %>
        <% 
          const totalTasks = plans.tasks.length;
          const completedTasks = plans.tasks.filter(task => task.completed).length;
          const completionPercentage = totalTasks > 0 ? (completedTasks / totalTasks) * 100 : 0;
        %>
        <li class="mb-4">
          <div class="bg-gray-100 p-4 rounded-lg shadow">
            <a href="/plan/<%= plans._id %>/<%= plans.userId %>" class="text-blue-500 hover:underline"><%= plans.title %> - Date: <%= new Date(plans.date).toDateString() %></a>
            <div class="w-full bg-gray-200 rounded-full h-4 mt-2">
              <div class="bg-green-500 h-4 rounded-full" style="width: <%= completionPercentage %>%;"></div>
            </div>
            <div><p><%= completionPercentage %>%</p></div>
            <p class="text-sm text-gray-700 mt-1"><%= completedTasks %>/<%= totalTasks %> tasks completed</p>
            <div class="flex justify-between items-center mt-4">
              <a href="/plan/<%= plans._id %>/<%= plans.userId %>/edit" class="bg-yellow-500 text-white px-4 py-2 rounded-md hover:bg-yellow-600 transition duration-300 ease-in-out">Edit</a>
              <form action="/plan/delete/<%= plans._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this plan?');">
                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition duration-300 ease-in-out">Delete</button>
              </form>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
    <div class="mt-6">
      <a href="/plan/create/<%= user._id %>" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-300 ease-in-out">Create New Plan</a>
    </div>

    <!-- Goals Section -->
    <h2 class="text-2xl font-semibold mt-8 mb-4">Your Goals</h2>
    <ul class="list-disc pl-6 space-y-2">
      
        <li class="mb-4">
          <div class="bg-gray-100 p-4 rounded-lg shadow">
            <h3 class="text-xl font-semibold">Title</h3>
            <p class="text-sm text-gray-700 mt-1">Description</p>
            <p class="text-sm text-gray-700 mt-1">Due Date:date</p>
            <p class="text-sm text-gray-700 mt-1">Priority: priority</p>
            <div class="flex justify-between items-center mt-4">
              <a href="/goal/goal._id /edit" class="bg-yellow-500 text-white px-4 py-2 rounded-md hover:bg-yellow-600 transition duration-300 ease-in-out">Edit</a>
              <form action="/goal/delete/goal._id " method="POST" onsubmit="return confirm('Are you sure you want to delete this goal?');">
                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition duration-300 ease-in-out">Delete</button>
              </form>
            </div>
          </div>
        </li>
   
    </ul>
    <div class="mt-6">
      <a href="/goal/create" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-300 ease-in-out">Create New Goal</a>
    </div>

  </div>
</div>

<%- include('./partials/footer') %>
