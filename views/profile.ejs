
<%- include('./partials/header') %>
<body class="custom-bg text-white">
    <div class="container mx-auto p-4 pt-6 md:p-6 lg:p-12">
      <div class="flex flex-wrap justify-center mb-4">
        <div class="w-full lg:w-1/2 xl:w-1/3 p-6 bg-white text-gray-800 rounded-lg shadow-lg">
          <img src="data:image/jpeg;base64,<%= user.image.toString('base64') %>" alt="Profile Name" class="rounded-full w-48 h-48 mb-4 mx-auto">
          <h2 class="text-2xl font-bold mb-2 text-center"><%= user.username %></h2>
          <p class="text-gray-600 mb-4 text-center"><%= user.Bio %></p>
          <ul class="flex flex-wrap justify-center mb-4">
            <li class="mr-4">
              <a href="#" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-github text-2xl text-gray-600 hover:text-gray-900 transition-colors duration-300"></i>
              </a>
            </li>
            <li class="mr-4">
              <a href="#" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-linkedin-in text-2xl text-gray-600 hover:text-gray-900 transition-colors duration-300"></i>
              </a>
            </li>
            <li class="mr-4">
              <a href="#" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-twitter text-2xl text-gray-600 hover:text-gray-900 transition-colors duration-300"></i>
              </a>
            </li>
          </ul>
        </div>
        <div class="w-full lg:w-1/2 xl:w-2/3 p-6 bg-white text-gray-800 rounded-lg shadow-lg">
          <h2 class="text-2xl font-bold mb-2">Study Plan</h2>
          <ul class="list-none mb-4">
            <% if (Array.isArray(plan)) { %>
              <% plan.reverse().forEach(plans => { %>
                <% 
                  const totalTasks = plans.tasks.length;
                  const completedTasks = plans.tasks.filter(task => task.completed).length;
                  const completionPercentage = totalTasks > 0 ? (completedTasks / totalTasks) * 100 : 0;
                 %>
                <li class="mb-2">
                  <i class="fas fa-book text-gray-600 mr-2"></i>
                  <%= plans.title %> (<%= completionPercentage %>%)
                </li>
              <% }) %>
            <% } else { %>
              <li class="mb-2">No study plans available.</li>
            <% } %>
          </ul>
          <h2 class="text-2xl font-bold mb-2">Goals</h2>
          <ul class="list-none mb-4">
            <li class="mb-2">
              <i class="fas fa-target text-gray-600 mr-2"></i>
              Complete online course
            </li>
            <li class="mb-2">
              <i class="fas fa-target text-gray-600 mr-2"></i>
              Learn a new programming language
            </li>
            <li class="mb-2">
              <i class="fas fa-target text-gray-600 mr-2"></i>
              Build a personal project
            </li>
          </ul>
        </div>
      </div>
    </div>
    <%- include('./partials/footer') %>