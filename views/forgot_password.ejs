<%- include('./partials/header') %>
<div class="container mx-auto p-4 mt-20 mb-20">
    <h2 class="text-2xl font-bold mb-4 text-center">Forgot Password</h2>
    <form action="/user/forgot_pass" method="POST" class="max-w-md mx-auto bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
           
            <label for="email" class="block text-gray-700">Email</label>
            <input type="email" name="email" id="email" class="block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" required autocomplete="email">
        </div>
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600 transition duration-300">Send OTP</button>
    </form>
</div>


